<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.luyan.dhdiagnosis.UI.Activity.AudioActivity"
    tools:showIn="@layout/activity_audio">

    <TextView
        android:id="@+id/numShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="60dp"
        android:layout_centerInParent="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/record"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            />

        <ImageView
            android:id="@+id/record_play"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/record_delete"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/delete_file"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/record_confirm"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="80dp"
            android:layout_alignParentRight="true"
            android:background="@mipmap/confirm_record"
            android:visibility="gone"
            />

    </RelativeLayout>
</RelativeLayout>
