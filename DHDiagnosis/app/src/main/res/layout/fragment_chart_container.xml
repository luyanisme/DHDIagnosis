<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luyan.dhdiagnosis.UI.Fragment.ChartContainerFragment">

    <LinearLayout
        android:id="@+id/chart_fragment_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/trend_chart_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测点趋势图"
            android:background="@drawable/button_border_style"/>

        <Button
            android:id="@+id/wave_chart_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测点波形图"
            android:background="@drawable/button_border_style"/>

        <Button
            android:id="@+id/frequency_chart_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="测点频谱图"
            android:background="@drawable/button_border_style"/>

    </LinearLayout>

</FrameLayout>
